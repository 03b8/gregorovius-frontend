$primary   = #2dac62
$secondary = #858585
$accent    = #bd1e1e

$positive  = #a6ffcb
$negative  = #ffd4d4
$info      = #cff7ff
$warning   = #ffedba

@font-face
    font-family: IBMPlexSans
    src:  url(../assets/fonts/IBMPlexSans-Regular.woff2) format('woff2')

@font-face
    font-family: IBMPlexSansBold
    src: url(../assets/fonts/IBMPlexSans-Bold.woff2) format('woff2')

@font-face
    font-family: IBMPlexSansMedium
    src: url(../assets/fonts/IBMPlexSans-Medium.woff2) format('woff2')

@font-face
    font-family: Cardo;
    src: url(../assets/fonts/Cardo-Regular.ttf)

@font-face
    font-family: CardoItalic;
    src: url(../assets/fonts/Cardo-RegularItalic.ttf)

@font-face
    font-family: CardoBold;
    src: url(../assets/fonts/Cardo-Bold.ttf)

$typography-font-family ?= 'IBMPlexSans', 'Cardo', 'Roboto', Arial, sans-serif
$body-font-size ?= 14px